{
    "root": true,
    "env": {
        "browser": true,
        "es2020": true,
        "node": true,
        "commonjs": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "impliedStrict" : true,
        "allowImportExportEverywhere": false,
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "ignorePatterns": "dist",
    "settings": {
        "react": {
          "version": "detect"
        }
    }
}
